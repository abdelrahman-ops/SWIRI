            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"School Zone\",\n  \"childId\": \"{{childId}}\",\n  \"coordinates\": [31.2357, 30.0444],\n  \"radiusM\": 200,\n  \"schedule\": {\n    \"days\": [1,2,3,4,5],\n    \"start\": \"07:00\",\n    \"end\": \"16:00\"\n  }\n}"
            },
            "url": "{{baseUrl}}/api/geofences"
