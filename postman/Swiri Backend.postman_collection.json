    {
      "name": "Children",
      "description": "Child profile management. Parent creates and lists their children.",
      "item": [
        {
          "name": "Create Child",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Adam\",\n  \"dateOfBirth\": \"2017-05-12\"\n}"
            },
            "url": "{{baseUrl}}/api/children"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const body = pm.response.json();",
                  "const id = body?.data?.child?._id || body?.data?._id || body?.child?._id;",
                  "if (id) pm.collectionVariables.set('childId', id);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Children",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/children"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const body = pm.response.json();",
                  "const kids = body?.data?.children || body?.children || body?.data || [];",
                  "if (kids.length && !pm.collectionVariables.get('childId')) {",
                  "  pm.collectionVariables.set('childId', kids[0]._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Child",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/children/{{childId}}"
          }
        },
        {
          "name": "Update Child",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Adam Updated\"\n}"
            },
            "url": "{{baseUrl}}/api/children/{{childId}}"
          }
        }
      ]
    },
