    {
      "name": "Auth",
      "description": "Authentication endpoints. No token required.",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"mariam@gmail.com\",\n  \"phone\": \"+201111111111\",\n  \"password\": \"12345678\",\n  \"confirmPassword\": \"12345678\",\n  \"agreedToTerms\": true,\n  \"role\": \"parent\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/signup"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const body = pm.response.json();",
                  "const token = body?.data?.token || body?.token;",
                  "if (token) pm.collectionVariables.set('token', token);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login (Email or Phone)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"mariam@gmail.com\",\n  \"password\": \"12345678\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const body = pm.response.json();",
                  "const token = body?.data?.token || body?.token;",
                  "if (token) pm.collectionVariables.set('token', token);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"mariam@gmail.com\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/forgot-password"
          }
        }
      ]
    },
    {
      "name": "Users",
