    "name": "Swiri AI Risk",
    "description": "AI Risk Assessment and Simulation endpoints for the Swiri backend.\n\nThis collection covers:\n- Direct AI risk assessment (analytics)\n- AI simulation pipeline (sensor data -> classify -> save -> alerts)\n- Preset scenario execution for demos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://swiri.vercel.app" },
    { "key": "token", "value": "" },
    { "key": "childId", "value": "" }
  ],
  "item": [
    {
      "name": "AI Risk Assessment",
      "description": "Direct AI risk classification. Sends sensor data, gets back prediction + saves to database.",
      "item": [
        {
          "name": "Create AI Risk Assessment",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"heart_rate_raw\": [80, 82, 90, 135, 145, 90, 88, 92, 95, 100],\n  \"accelerometer_raw\": [1.1, 1.2, 3.5, 4.0, 3.8, 1.5, 1.2, 1.0, 1.3, 1.1],\n  \"source\": \"watch\"\n}"
            },
            "url": "{{baseUrl}}/api/analytics/ai-risk/{{childId}}"
          }
        },
        {
          "name": "List AI Risk Assessments",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/analytics/ai-risk/{{childId}}"
          }
        }
      ]
    },
